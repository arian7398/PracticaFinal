<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Productos</h1>

    <form id="product-form">
        <div id="products">
            <% products.forEach(product => { %>
                <div class="product">
                    <img src=<%= product.imagen %>  />
                    <h2><%= product.descripcion %></h2>
                    <p>Precio: $<%= product.precio %></p>
                    <input type="number" id="quantity_<%= product._id %>" min="1" max="<%= product.stock %>" placeholder="Cantidad">
                    <button type="button" onclick="addToCart('<%= product._id %>', '<%= product.descripcion %>', <%= product.precio %>)">Agregar al Carrito</button>
                </div>
            <% }) %>
        </div>
    </form>

    <div id="cart">
        <h2>Carrito</h2>
        <ul id="cart-items"></ul>
        <button id="checkout-btn">Proceder al Pago</button>
    </div>

    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/app.js"></script>
</body>
</html>
